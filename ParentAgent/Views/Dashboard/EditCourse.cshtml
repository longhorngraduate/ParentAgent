@model ParentAgent.Models.ResponseCreateCourseViewModel

@{
}


<div class="contact-main">
    <div class="container">
        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-lg-8 mb-4 contact-left">
                <h2>Edit Course</h2>
                <br />

                @using (Html.BeginForm("AlterCourse", "Dashboard", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>@Model.CourseVM.Name</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CourseVM.CourseId)

                        <div class="form-group">
                            @Html.LabelFor(model => Model.CourseVM.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.CourseVM.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.CourseVM.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.CourseVM.TimeStart, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.CourseVM.TimeStart, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.CourseVM.TimeStart, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.CourseVM.TimeEnd, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.CourseVM.TimeEnd, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.CourseVM.TimeEnd, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.CourseVM.ClassType, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("CourseVM.ClassType",
                                              EnumHelper.GetSelectList(typeof(ParentAgent.Models.ClassType)),
                                              "Select Class Type",
                                            new { id = "CourseVM_ClassType", @class = "form-control js-ClassType" })
                                @Html.ValidationMessageFor(model => Model.CourseVM.ClassType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.CourseVM.SchoolName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.CourseVM.SchoolName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.CourseVM.SchoolName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />


                        <h4>Teacher</h4>
                        <hr />

                        <div class="form-group">
                            @Html.LabelFor(model => Model.TeacherVM.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.TeacherVM.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.TeacherVM.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.TeacherVM.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.TeacherVM.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.TeacherVM.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.TeacherVM.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.TeacherVM.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.TeacherVM.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TeacherVM.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("TeacherVM.Gender",
                                              EnumHelper.GetSelectList(typeof(ParentAgent.Models.Gender)),
                                              "Select Gender",
                                            new { id = "TeacherVM_Gender", @class = "form-control js-gender" })
                                @Html.ValidationMessageFor(model => model.TeacherVM.Gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => Model.TeacherVM.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => Model.TeacherVM.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => Model.TeacherVM.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TeacherVM.PreferredMethodOfContact, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("TeacherVM.PreferredMethodOfContact",
                                              EnumHelper.GetSelectList(typeof(ParentAgent.Models.PreferredMethodOfContact)),
                                              "Select Preferred Method Of Contact",
                                            new { id = "TeacherVM_PreferredMethodOfContact", @class = "form-control js-PreferredMethodOfContact" })
                                @Html.ValidationMessageFor(model => model.TeacherVM.PreferredMethodOfContact, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="hidden" id="CourseVM_StudentId" name="CourseVM.StudentId" value="@Model.CourseVM.StudentId" />
                                <input type="submit" value="Save" class="btn btn-primary js-btn-hover" />
                                <a href="/Dashboard/Index/@Model.CourseVM.StudentId/@Model.CourseVM.CourseId" class="btn btn-primary js-btn-hover">Cancel</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
